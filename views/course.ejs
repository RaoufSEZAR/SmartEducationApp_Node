<%- include('./partials/_head.ejs')%> <%-include('./partials/_navigation.ejs')%>

<div class="all-title-box">
	<div class="container text-center">
		<h1><%= course.name%></h1>
	</div>
</div>

<div id="overviews" class="section wb">
	<div class="container">
		<div class="row">
			<div class="col-lg-9 blog-post-single">
				<div class="blog-item">
					<div class="image-blog">
						<img src="/images/blog_single.jpg" alt="" class="img-fluid" />
					</div>
					<div class="post-content">

						<%if (user && !(user.courses.includes(course._id))){%>
							<div class="post-date">
								<form method="POST" action="/courses/enroll">
									<input type="hidden" name="course_id" value="<%= course._id %>">
									<button class="btn btn-lg btn-warning text-white"><span>ENROLL</span></button>
							  	</form>
							</div>

						<%}%>

						<div class="meta-info-blog">
							<span
								><i class="fa fa-calendar"></i>
								<a href="#"><%= course.createdAt%></a>
							</span>
						</div>
						<div class="blog-title">
							<h2>
								<a href="#" title=""><%=course.name%></a>
							</h2>
						</div>
						<div class="blog-desc">
							<blockquote class="default"><%=course.description%></blockquote>
						</div>
					</div>
				</div>

				<div class="blog-author">
					<div class="author-bio">
						<h3 class="author_name"><a href="#"><%=course.user.name%></a></h3>
						<h5>Teacher at <a href="#">SmartEDU</a></h5>
						<p class="author_det">For Contact: <h4> <%=course.user.email%></h4></p>
					</div>
					<div class="author-desc">
						<img src="/images/author.jpg" alt="about author" />
						<ul class="author-social">
							<li>
								<a href="#"><i class="fa fa-facebook"></i></a>
							</li>
							<li>
								<a href="#"><i class="fa fa-twitter"></i></a>
							</li>
							<li>
								<a href="#"><i class="fa fa-skype"></i></a>
							</li>
						</ul>
					</div>
				</div>
			</div>
			<!-- end col -->
			<div class="col-lg-3 col-12 right-single">
				<div class="widget-search">
					<div class="site-search-area">
						<form method="get" id="site-searchform" action="#">
							<div>
								<input
									class="input-text form-control"
									name="search-k"
									id="search-k"
									placeholder="Search keywords..."
									type="text"
								/>
								<input id="searchsubmit" value="Search" type="submit" />
							</div>
						</form>
					</div>
				</div>
				<div class="widget-categories">
					<h3 class="widget-title">Categories</h3>
					<ul>
						<%for(let category of categories){%>
						<li>
							<a href="/courses?categories=<%=category.slug%>">
								<%=category.name%>
							</a>
						</li>
						<%}%>
					</ul>
				</div>
			</div>
		</div>
		<!-- end row -->
	</div>
	<!-- end container -->
</div>
<!-- end section -->
<%- include('./partials/_footer.ejs')%>
